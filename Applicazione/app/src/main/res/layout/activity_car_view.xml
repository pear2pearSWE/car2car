<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@color/calendar_active_month_bg"
            android:id="@+id/icon_car_car_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:scaleType="centerCrop"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_brand_car_view" app:layout_constraintStart_toEndOf="@+id/icon_car_car_view"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:textColorHighlight="#00C4A0A0" android:textColor="@color/black" android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_model_car_view"
            android:textColor="@color/black" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/text_brand_car_view"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>
        <TextView
                android:text="Immatricalazione:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_date_car_view" android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_brand_car_view"
                app:layout_constraintStart_toEndOf="@+id/icon_car_car_view" android:layout_marginStart="16dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_date_car_view" android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_brand_car_view"
            app:layout_constraintStart_toEndOf="@+id/label_date_car_view" android:layout_marginStart="8dp"/>
        <TextView
                android:text="Prezzo:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_price_car_view" android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/icon_car_car_view"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/text_price_car_view"
                app:layout_constraintTop_toTopOf="@+id/text_price_car_view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_price_car_view" android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/label_price_car_view"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_date_car_view"/>
        <TextView
                android:text="â‚¬/h"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_euro_car_view" android:textSize="18sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/text_price_car_view"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_date_car_view"
                android:layout_marginStart="1dp"/>
        <TextView
                android:text="Targa:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_plates_car_view" app:layout_constraintStart_toEndOf="@+id/label_euro_car_view"
                android:layout_marginStart="24dp"
                app:layout_constraintTop_toTopOf="@+id/label_euro_car_view"
                app:layout_constraintBottom_toBottomOf="@+id/label_euro_car_view" android:textColor="@color/black"
                android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_plates_car_view"
            app:layout_constraintTop_toTopOf="@+id/label_euro_car_view"
            app:layout_constraintBottom_toBottomOf="@+id/label_euro_car_view" android:textColor="@color/black"
            android:textSize="18sp" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/label_plates_car_view" android:layout_marginStart="8dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/text_description_car_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:textColor="@color/black" android:textSize="14sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/label_price_car_view"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@color/calendar_active_month_bg"
            android:id="@+id/icon_user_car_view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:scaleType="centerCrop"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/text_description_car_view"/>
        <TextView
                android:text="Proprietario: "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_owner_car_view"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/icon_user_car_view" android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/icon_user_car_view" android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_owner_car_view" app:layout_constraintStart_toEndOf="@+id/label_owner_car_view"
            android:layout_marginStart="8dp"
            android:textColor="@color/black" android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@+id/label_owner_car_view"/>
        <TextView
                android:text="Livello:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/label_level_car_view" app:layout_constraintStart_toEndOf="@+id/icon_user_car_view"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/label_owner_car_view"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/icon_user_car_view" android:layout_marginBottom="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_level_car_view" android:textSize="18sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/label_owner_car_view"
            app:layout_constraintStart_toEndOf="@+id/label_level_car_view" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/label_level_car_view"
            android:layout_marginTop="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_start_sharing_car_view"
            android:textSize="18sp" android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/label_sharing_from_car_view"
            app:layout_constraintTop_toTopOf="@+id/label_sharing_from_car_view"
            app:layout_constraintBottom_toBottomOf="@+id/label_sharing_from_car_view"
            app:layout_constraintEnd_toStartOf="@+id/label_sharing_to_car_view"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/text_end_sharing_car_view"
            android:textSize="18sp" android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/label_sharing_to_car_view"
            app:layout_constraintTop_toTopOf="@+id/label_sharing_from_car_view"
            app:layout_constraintBottom_toBottomOf="@+id/label_sharing_from_car_view"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
    />
        <TextView
                android:text="Disponibile dal "
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/label_sharing_from_car_view"
                android:textSize="18sp" android:textColor="@color/black" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="32dp" android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/icon_user_car_view"
                app:layout_constraintEnd_toStartOf="@+id/text_start_sharing_car_view"/>
        <TextView
                android:text=" al "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/label_sharing_to_car_view"
                android:textSize="18sp" android:textColor="@color/black"
                app:layout_constraintStart_toEndOf="@+id/text_start_sharing_car_view"
                app:layout_constraintTop_toTopOf="@+id/text_start_sharing_car_view"
                app:layout_constraintBottom_toBottomOf="@+id/text_start_sharing_car_view"
                app:layout_constraintEnd_toStartOf="@+id/text_end_sharing_car_view"/>
        <CalendarView
                android:id="@+id/calendar_car_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingBottom="8dp"
                android:background="@color/white"
                android:scrollbarStyle="outsideOverlay"
                android:clipToPadding="false" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:selectedDateVerticalBar="@color/lightGreen"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" app:layout_constraintBottom_toTopOf="@+id/bt_rent_request_car_view"
                android:layout_marginBottom="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/text_start_sharing_car_view"/>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress_bar_car_view" app:layout_constraintStart_toStartOf="@+id/calendar_car_view"
                android:layout_marginTop="32dp"
                app:layout_constraintTop_toTopOf="@+id/calendar_car_view"
                app:layout_constraintEnd_toEndOf="@+id/calendar_car_view"/>
        <Button
                android:text="Affitta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/bt_rent_request_car_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
                android:backgroundTint="@color/colorPrimary"/>
</android.support.constraint.ConstraintLayout>