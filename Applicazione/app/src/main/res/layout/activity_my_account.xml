<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/rounded_container_bg">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="32dp"
            android:paddingTop="32dp"
            android:paddingEnd="32dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="32dp">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp" tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/icon_user_my_account" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_margin="2dip"/>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Livello"
                            android:textSize="18dp"
                            android:textAlignment="center" android:id="@+id/text_level_my_account"/>
                    <ProgressBar
                            style="?android:attr/progressBarStyleHorizontal"
                            android:progressDrawable="@drawable/custom_progress_bar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/LevelprogressBar"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:id="@+id/LevelPercentageView"
                            android:textAlignment="center"/>

                </LinearLayout>

                <ImageButton
                        android:id="@+id/bt_change_avatar_my_account"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:paddingTop="12dp"
                        android:paddingLeft="12dp"
                        android:paddingBottom="12dp"
                        android:scaleType="centerInside"
                        android:src="@mipmap/ic_launcher_foreground_bag"

                />

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_user_layer"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_username_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Username"
                            android:textSize="18dp" android:id="@+id/label_username_my_account"/>
                    <TextView
                            android:id="@+id/text_name_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textSize="18dp" android:id="@+id/label_name_my_account"/>
                    <TextView
                            android:id="@+id/text_surname_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-medium"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Surname"
                            android:textSize="18dp" android:id="@+id/label_surname_my_account"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_phone_layer"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_telephone_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Telefono"
                            android:textSize="18dp" android:id="@+id/label_telephon_my_account"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_mail_layer"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_email_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E-mail"
                            android:textSize="18dp" android:id="@+id/label_email_my_account"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_birthdate_layer"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_bithday_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Data di nascita"
                            android:textSize="18sp" android:id="@+id/label_birthday_my_account"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_launcher_foreground_card"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_cf_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Codice Fiscale"
                            android:textSize="18dp" android:id="@+id/label_cf_my_account"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:background="@color/white">

                <ImageView
                        android:layout_gravity="center"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:padding="8dp"
                        app:srcCompat="@mipmap/ic_launcher_foreground_card"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                    <TextView
                            android:id="@+id/text_licence_my_account"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Numero Patente"
                            android:textSize="18dp" android:id="@+id/label_licence_my_account"/>

                </LinearLayout>

            </LinearLayout>
            <Button
                    android:text="Elimina account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bt_delete_account_my_account"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>
