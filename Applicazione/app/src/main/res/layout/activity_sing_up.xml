<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegistrationActivity">

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical" android:id="@+id/layout_sign_up">
            <TextView
                    android:text="Registrazione"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/label_sign_up"
                    android:textColor="@color/black" android:textSize="18sp"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/edit_mail_sign_up"
                    android:hint="e.mail"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Username"
                    android:ems="10"
                    android:id="@+id/edit_username_sign_up"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:id="@+id/edit_password_sign_up"
                    android:hint="Password(min 6 char)"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword|phone"
                    android:ems="10"
                    android:id="@+id/edit_telephone_sign_up"
                    android:hint="+39 telefono"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_cf_sign_up"
                    android:hint="codice fiscale(16char)"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_license_sign_up"
                    android:hint="numero patente(8-13 char)"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_name_sign_up"
                    android:hint="nome"/>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_surname_sign_up"
                    android:hint="cognome"/>
            <Button
                    android:text="Data di nascita"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content" android:id="@+id/bt_date_sign_up"/>
            <TextView
                    android:text="Data di nascita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/label_birthday_sign_up"/>
            <Button
                    android:text="Registrati"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/bt_sign_up"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>