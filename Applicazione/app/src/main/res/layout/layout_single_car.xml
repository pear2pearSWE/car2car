<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightGreen"
        android:layout_margin="5dp"
        tools:context="com.pear2pear.car2car.activities.CarViewActivity">

    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" app:srcCompat="@mipmap/ic_parkingcar"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/icon_single_car"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="0dp"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
    <TextView
            android:text="Marca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_brand_single_car"
            android:background="#00000000"
            android:padding="1dp" app:layout_constraintStart_toEndOf="@+id/icon_single_car"
            android:layout_marginStart="16dp"
            android:textSize="18sp" android:textColor="@color/black" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="Modello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_model_single_car"
            android:background="#00000000"
            android:padding="1dp"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/text_brand_single_car" android:layout_marginStart="8dp"
    />
    <TextView
            android:text="Proprietario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_owner_single_car"
            android:background="#00000000"
            android:padding="1dp" app:layout_constraintStart_toEndOf="@+id/icon_single_car"
            android:layout_marginStart="16dp"
            android:textSize="18sp" android:textColor="@color/black"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_brand_single_car"
    />
    <TextView
            android:text="Prezzo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_price_single_car"
            android:background="#00000000"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/text_price_single_car2" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="â‚¬/h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_price_single_car2"
            android:background="#00000000"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>