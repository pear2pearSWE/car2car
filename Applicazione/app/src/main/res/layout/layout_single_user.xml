<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/layout_single_user"
                                             android:background="#FFFFFF"
                                             android:layout_margin="10dp"
                                             android:backgroundTint="@color/lightGreen">
    <TextView
            android:text="#"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/text_position_leaderboard"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAlignment="center" android:textColor="@color/black" android:textSize="24sp"/>
    <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/icon_user_leaderboard"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="64dp" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:text="Utente"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" android:id="@+id/label_user_leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/icon_user_leaderboard" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"/>
    <TextView
            android:text="username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_user_leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            app:layout_constraintStart_toEndOf="@+id/label_user_leaderboard" android:layout_marginStart="8dp"
            android:textSize="18sp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Livello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/label_level_leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/label_user_leaderboard" app:layout_constraintStart_toEndOf="@+id/icon_user_leaderboard"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp" android:textSize="18sp"
    />
    <TextView
            android:text="00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_level_leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/label_level_leaderboard"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_user_leaderboard"
    />
    <TextView
            android:text="PE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/label_pe_leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/text_level_leaderboard"
            android:layout_marginStart="24dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/text_user_leaderboard"
    />
    <TextView
            android:text="0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/text_pe__leaderboard" android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="18sp" app:layout_constraintStart_toEndOf="@+id/label_pe_leaderboard"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_user_leaderboard"
    />
</android.support.constraint.ConstraintLayout>